{
  "name": "the-perfect-express-ts-server",
  "version": "0.0.7",
  "private": true,
  "main": "server.js",
  "description": "A best practices express/ts server with clustering and socket.io",
  "scripts": {
    "start": "pm2-runtime start ./dist/server.js --env production -i max",
    "poststart": "pm2 logs",
    "postinstall": "yarn build && husky install",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "eslint": "eslint --quiet --fix",
    "prettier": "prettier src/**/*.ts --write",
    "lint": "yarn prettier && yarn eslint",
    "test": "NODE_ENV=test nyc mocha"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "NODE_ENV=test yarn test && yarn build && yarn version --patch"
    }
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "~4.17.1",
    "express-validator": "^6.12.1",
    "helmet": "^4.6.0",
    "jsend": "^1.1.0",
    "morgan": "~1.10.0",
    "multer": "^1.4.3",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "pm2": "^5.1.1",
    "sequelize": "^6.6.5",
    "socket.io": "^4.1.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jsend": "^1.0.29",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.4",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "faker": "^5.5.3",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "mocha": "^9.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  }
}
